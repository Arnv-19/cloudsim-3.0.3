    "simulation_parameters": {
        "simulation_time": 20,
        "number_of_hosts": 10,
        "number_of_vms": 30,
        "number_of_cloudlets": 40
    },
    "vm_configurations": [
        {
            "zone": "high_resource",
            "count": 6,
            "mips_range": [900, 1300],
            "ram_range": [3072, 4096],
            "storage_range": [12000, 20000]
        },
        {
            "zone": "medium",
            "count": 8,
            "mips_range": [1200, 1700],
            "ram_range": [1024, 2048],
            "storage_range": [6000, 10000]
        },
        {
            "zone": "fast_small",
            "count": 16,
            "mips_range": [2500, 3500],
            "ram_range": [512, 1024],
            "storage_range": [2000, 4000]
        }
    ],
    "workload_pattern": {
        "type": "imbalanced",
        "initial_zone_load": [0.7, 0.2, 0.1],
        "migration_trigger": 0.5
    }
